<h1>Add a book</h1>

<%= form_for @book, :html => { :class => 'form-horizontal' } do |book| %>

  <%= book.label      :title %>
  <%= book.text_field :title %>

  <%= book.label      :author %>
  <%= book.text_field :author %>

  <%= book.label     :has_been_read, 'Has been read?' %>
  <%= book.check_box :has_been_read %>

  <%= book.label     :on_current_list, 'On current list?' %>
  <%= book.check_box :on_current_list %>

  <%= book.submit 'Add book' %>

<% end %>
